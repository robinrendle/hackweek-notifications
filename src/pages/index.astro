---
import AppWrapper from '../components/AppWrapper.astro';
import Header from '../components/Header.astro';
import Notification from '../components/Notification.astro';
import Filters from '../components/Filters.astro';
import Pagination from '../components/Pagination.astro';
import Tabs from '../components/tabs/Tabs.astro';
import TabItem from '../components/tabs/TabItem.astro';
import Table from '../components/Table.astro';
---

<AppWrapper>
  <Header>
    <Tabs>
      <TabItem unread={40} url="/" active>All</TabItem>
      <TabItem unread={12} url="alerts">Alerts</TabItem>
      <TabItem unread={7} url="workflow">Workflow</TabItem>
      <TabItem unread={6} url="account">Account</TabItem>
      <TabItem unread={12} url="new">What’s New</TabItem>
    </Tabs>
  </Header>
  <Filters/>
  <Table>
    <Notification 
      title='Approve Request' 
      desc='Jane Schmidt wants to join the #workflow team'
      type='Account' 
      time='1 minute ago'/>
    <Notification 
      title='Upgrade from your Trial' 
      desc='Your Sentry trial account is ending in 4 days'
      type='Account' 
      time='2 minutes ago'/>
    <Notification 
      title='Update SDK' 
      desc='The javascript project requires an update to @v1.3.1'
      type='Account' 
      time='2 minutes ago'/>
    <Notification 
      title='Approaching Quota' 
      desc='Your org is about to exceed its event capacity'
      type='Account' 
      time='3 minutes ago'/>
    <Notification 
      title='Do Math in Discover' 
      desc='Quickly track status-based and performance-based SLOs'
      type='What’s New' 
      time='4 minutes ago'/>
    <Notification 
      title='Filter Releases by Adoption' 
      desc='Now you can filter out releases that aren’t used by users'
      type='What’s New' 
      time='5 minutes ago'/>
    <Notification 
      title='Notify me about New Issues' 
      desc='TypeError - JavaScript'
      type='Alerts' 
      time='5 minutes ago'
      read />
    <Notification 
      title='UI Transactions Low' 
      desc='Below 1 in the last minute'
      type='Alerts' 
      time='5 minutes ago'/>
    <Notification 
      title='Issue assigned to #workflow by Jane Schmidt' 
      desc='TypeError - JavaScript'
      type='Workflow' 
      time='6 minutes ago'
      read />
    <Notification 
      title='Crash Free Sessions Low' 
      desc='Lower than 91.3% in the last minute'
      type='Alerts' 
      time='7 minutes ago'/>
    <Notification 
      title='New comment by Jane Schmidt' 
      desc='“This might be related to issue 717”'
      type='Workflow' 
      time='8 minutes ago'/>
    <Notification 
      title='Issue assigned to you by Jane Schmidt' 
      desc='TypeError - JavaScript'
      type='Workflow' 
      time='9 minutes ago'/>
    <Notification 
      title='Issue assigned to you by Jane Schmidt' 
      desc='TypeError - JavaScript'
      type='Workflow' 
      time='7 minutes ago'/>
    <Notification 
      title='Update Billing Information' 
      desc='Your subscription failed. We’ll try to charge you again in 2 days'
      type='Account' 
      time='10 minutes ago'/>
    <Notification 
      title='Weekly Summary' 
      desc='View a summary of the past week'
      type='Account' 
      time='10 minutes ago'/>
  </Table>
  <Pagination />
</AppWrapper>
